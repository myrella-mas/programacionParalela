#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <mpi.h>
 
int main(int argc, char* argv[])
{
    MPI_Init(&argc, &argv);
 
    // Obtener el numero de procesos y que se verifique que sea diferente de 4.
    int size;
    MPI_Comm_size(MPI_COMM_WORLD, &size);
    if(size != 4)
    {
        printf("Esta aplicacion puede correr con la cantidad de procesos diferente de 4.\n");
        MPI_Abort(MPI_COMM_WORLD, EXIT_FAILURE);
    }
 
    int root_rank = 0;
 
    // Obtener mi posicion(rank)
    int my_rank;
    MPI_Comm_rank(MPI_COMM_WORLD, &my_rank);
 
    // Cada MPI proceso envia la posicion para la reduccion, el MPI principal colecta todos los resultados
    bool my_value = (my_rank == 3);
    bool reduction_result = false;
    MPI_Reduce(&my_value, &reduction_result, 1, MPI_C_BOOL, MPI_LOR, root_rank, MPI_COMM_WORLD);
 
    if(my_rank == root_rank)
    {
        printf("La logica de todos los valores es %s.\n", reduction_result ? "true" : "false");
    }
 
    MPI_Finalize();
 
    return EXIT_SUCCESS;
}
